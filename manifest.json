{
    "manifest_version": 2,
    "name": "Thunderbird MathJax loader",
    "description": "Loads MathJax to render LaTeX in messages",
    "author": "Niels Wouda",
    "version": "1.0.0",
    "applications": {
        "gecko": {
            "id": "mathjax-loader@nielswouda.com",
            "strict_min_version": "78.0",
            "strict_max_version": "78.*"
        }
    },
    "background": {
        "scripts": [
            "src/background.js"
        ]
    },
    "permissions": [
        "messagesModify",
        "messagesRead"
    ]
}
